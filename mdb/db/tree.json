
{ "type": "fixed", "name": "M.uuid", "size": 16 }

{
    "type": "record",
    "name": "M.key",
    "fields": [
        { "name": "kind", "type": "string" },
        { "name": "id", "type": [ "M.uuid", "string" ] }
    ]
}

{
    "type": "record",
    "name": "M.Item",
    "fields": [
        { "name": "name", "type": "string" },
        { "name": "title", "type": "string" },
        { "name": "folder", "type": [ "M.key", "null" ], "default": null }
    ]
}

{ "name": "M.text", "type": "string" }

{ "name": "M.html", "type": "string" }

{
    "type": "record",
    "name": "M.Folder",
    "base": "M.Item",
    "fields": [
        { "name": "default_name", "type": "string", "default": "" },
        { "name": "contents", "type": { "type": "omap", "values": "M.key" }, "default": {} }
    ]
}

{
    "type": "record",
    "name": "M.Site",
    "base": "M.Folder"
}

{
    "type": "record",
    "name": "M.Subdomain",
    "base": "M.Site"
}

{
    "type": "record",
    "name": "M.Page",
    "base": "M.Item",
    "fields": [
        { "name": "description", "type": "M.text", "default": "" },
        { "name": "content", "type": "M.html", "default": "" }
    ]
}